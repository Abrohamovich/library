<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="485.0" prefWidth="687.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.abrohamovich.controller.create.CreatePatronController" stylesheets="@/style.css">
    <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="530.0" prefWidth="797.0" spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <AnchorPane prefHeight="29.0" prefWidth="667.0">
            <children>
                <Label layoutX="14.0" layoutY="3.0" prefHeight="43.0" prefWidth="250.0" text="Create New Patron" styleClass="header">
                </Label>
            </children>
        </AnchorPane>

        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="647.0" spacing="10.0">
                <Label prefWidth="100.0" text="Card ID:" />
                <TextField fx:id="cardIdField" prefHeight="43.0" prefWidth="537.0" promptText="Enter card ID..." HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="647.0" spacing="10.0">
                <Label prefWidth="100.0" text="Full Name:" />
                <TextField fx:id="fullNameField" prefHeight="45.0" prefWidth="537.0" promptText="Enter full name..." HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="100.0" text="Email:" />
                <TextField fx:id="emailField" prefHeight="35.0" prefWidth="537.0" promptText="Enter email address..." HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="100.0" text="Phone:" />
                <TextField fx:id="phoneField" prefHeight="35.0" prefWidth="537.0" promptText="Enter phone number..." HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="100.0" text="Address:" />
                <TextField fx:id="addressField" prefHeight="35.0" prefWidth="537.0" promptText="Enter address..." HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="100.0" text="Date of Birth:" />
                <DatePicker fx:id="dateOfBirthPicker" prefHeight="35.0" prefWidth="174.0" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="100.0" text="Register Date:" />
                <DatePicker fx:id="registerDatePicker" prefHeight="35.0" prefWidth="174.0" HBox.hgrow="ALWAYS" />
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
                <Button onAction="#createPatron" text="Create" />
                <Button onAction="#cancelCreation" text="Cancel" styleClass="cancel" />
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>